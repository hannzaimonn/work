<%= render 'hed/bar', hed: @hed %>

<div class="userinfo">
<h1>User info</h1>
<% if @user.errors.any? %>
 		<h4><%= @user.errors.count %>errors prohibited this book from being saved:</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@user) do |f| %>

  <h4>name</h4>
  <%= f.text_field :name %>

  <h4>image</h4>
  <%= f.attachment_field :profile_image%>

  <h4>introduction</h4>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update User' %>

<% end %>
</div>

