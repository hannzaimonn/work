<head>
	<%= render 'hed/bar', hed: @hed %>
</head>
<body>

<div class="flash">
<% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
<% end %>
</div>


<div class="container">
 <div class="row">
 	<div class="col-xs-3" style="background-color: white">

 		<p><%= flash[:complete] %></p>
 		<h2>User info</h2>
 		<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
 		<table class="table table-hover">

 			<tbody>
 				 <tr>
 					<td>name</td>
 					<td><%= @user.name %></td>
 				 </tr>
 				 <tr>
 					<td>Introduction</td>
 					<td><%= @user.introduction %></td>
 				 </tr>
 			</tbody>
 		</table>


<%= link_to(edit_user_path(@user.id), class:  "btn btn-default") do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title , class: "edit-title"%>

  <p>Body</p>
  <%= f.text_area :body, class: "edit-body"%>
  <br>
  <%= f.submit 'Create Book', class: "btn btn-primary" %>

<% end %>

 	</div>
 	<div class=" col-xs-9">
<h1>Books</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<th><P>image</P></th>
				<th><P>title</P></th>
				<th><P>opinion</P></th>
			</tr>
		</thead>
		<tbody>
			<% @user.books.each do |book| %>
				<tr class="new-table">
					<td><%= link_to  "/books/new" do %>
						<%= attachment_image_tag @user, :profile_image, format: 'jpeg',class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "35x35" %>
							<% end %>
						</td>
					<td><span><%= link_to book.title, "/books/#{book.id}"%></span></td>
					<td><span><%= book.body %></span></td>
				</tr>
			<% end %>

		</tbody>
	</table>
   </div>
  </div>
</div>