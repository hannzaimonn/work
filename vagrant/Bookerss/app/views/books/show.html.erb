	<%= render 'hed/bar', hed: @hed %>
</head>
<body>


<div class="container">
 <div class="row">
 	<div class="col-xs-3" style="background-color: white">
      <p><%= flash[:complete] %></p>
      <p><%= flash[:notice] %></p>
 		<h2>User info</h2>

 		<%= attachment_image_tag @post.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

 		<table class="table table-hover">

 			<tbody>

 				 <tr>
 					<td>name</td>
 					<td><%= @post.user.name %></td>
 				 </tr>

 				 <tr>
 					<td>Introduction</td>
 					<td><%= @post.user.introduction %></td>
 				 </tr>

 			</tbody>

 		</table>
<%= link_to(edit_user_path(@post.user.id), class:  "btn btn-default") do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end -%>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

  <p>Title</p>
  <%= f.text_field :title , class: "edit-title"%>

  <p>Body</p>
  <%= f.text_area :body, class: "edit-body"%>
  <br>
  <%= f.submit 'Create Book', class: "btn btn-primary" %>

<% end %>

 	</div>

<div class=" col-xs-9">
 <h1>Book detail</h1>

	<table class="table table-striped">
		<thead>
		</thead>
		<tbody>
		  <div class="flash">
          </div>


               <table class="table table-hover">
	           <thead>
	           </thead>
	 <tbody>
		  <tr>
			  <td><%= link_to  "/users/#{@post.user_id}" do %>
			  	<%= attachment_image_tag @post.user, :profile_image, format: 'jpeg',class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "35x35" %><br><br>
			  	<%= @post.user.name %>
			  	<% end %>
			  </td>
			  <td><%= link_to @post.title, book_path(@post.id)%></td>
			  <td><%= @post.body %></td>

			 <% if current_user.id == @post.user_id %>
				<td><h4><span class="label label-success"><%= link_to "Edit", edit_book_path(@post.id) %></span></h4></td>
				<td><h4><span class="label label-danger"><%= link_to "Destroy", book_path(@post), method: :delete, "data-confirm" =>"Are you sureï¼Ÿ" %></span></h4></td>
			 <% else %>
				<td></td>
				<td></td>

			 <% end %>
		  </tr>
	 </tbody>
</table>

		</tbody>
	</table>
</div>


</body>
</html>

